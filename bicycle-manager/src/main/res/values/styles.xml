<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/color_accent_dark</item>
        <item name="android:textColorPrimary">@color/color_primary_text</item>
        <item name="android:background">@color/color_text</item>
    </style>

    <style name="AppTheme.CardView" parent="CardView.Light">
        <item name="android:foreground">@drawable/cardview_bg</item>
        <item name="android:radius">8dp</item>
    </style>

    <style name="AppTheme.Header" parent="TextAppearance.AppCompat.Large">
    </style>
    <style name="AppTheme.Header.Primary">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text" parent="TextAppearance.AppCompat.Small">
    </style>
    <style name="AppTheme.Text.Label">
        <item name="android:textColor">@color/color_gray_light</item>
    </style>
    <style name="AppTheme.Text.Bold">
        <item name="android:textColor">@color/color_gray_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/color_icons</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_title_material_toolbar</item>
        <item name="android:textColor">@color/color_text</item>
    </style>

    <style name="AppTheme.Dialog.BottomSheet" parent="BottomSheet.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:textColorPrimary">@color/color_primary</item>
        <item name="android:textColorSecondary">@color/color_primary_dark</item>
        <item name="android:textColorHint">@color/color_primary_dark</item>
        <item name="bs_dialogBackground">@android:color/background_light</item>
        <item name="bs_dividerColor">@color/color_divider</item>
        <item name="bs_numColumns">3</item>
        <item name="bs_listStyle">@style/BottomSheet.Grid</item>
    </style>
</resources>
